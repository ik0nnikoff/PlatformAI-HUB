# ================================================================
# Voice V2 Performance Optimization Configuration
# ================================================================
# Copy this file to .env and configure according to your environment

# Main Performance System Toggle
VOICE_V2_PERFORMANCE_ENABLED=true

# STT Optimization Settings
VOICE_V2_STT_OPTIMIZATION_ENABLED=true
VOICE_V2_STT_CACHE_SIZE=1000
VOICE_V2_STT_CACHE_TTL=3600
VOICE_V2_STT_MAX_CONNECTIONS=100
VOICE_V2_STT_CONNECTION_TIMEOUT=30
VOICE_V2_STT_PARALLEL_REQUESTS=5

# TTS Optimization Settings
VOICE_V2_TTS_OPTIMIZATION_ENABLED=true
VOICE_V2_TTS_STREAMING_ENABLED=true
VOICE_V2_TTS_CACHE_SIZE=500
VOICE_V2_TTS_CACHE_TTL=7200
VOICE_V2_TTS_COMPRESSION_ENABLED=true
VOICE_V2_TTS_QUALITY_THRESHOLD=0.8

# LangGraph Decision Optimization
VOICE_V2_LANGGRAPH_OPTIMIZATION_ENABLED=true
VOICE_V2_LANGGRAPH_CACHE_SIZE=200
VOICE_V2_LANGGRAPH_CACHE_TTL=1800
VOICE_V2_LANGGRAPH_SEMANTIC_CACHE_ENABLED=true
VOICE_V2_LANGGRAPH_HEURISTIC_DECISIONS_ENABLED=true

# Monitoring and Metrics
VOICE_V2_MONITORING_ENABLED=true
VOICE_V2_METRICS_COLLECTION_ENABLED=true
VOICE_V2_PERFORMANCE_ALERTS_ENABLED=true

# Load Testing and Validation
VOICE_V2_LOAD_TESTING_ENABLED=false
VOICE_V2_PERFORMANCE_VALIDATION_ENABLED=true

# Thresholds and Limits
VOICE_V2_RESPONSE_TIME_THRESHOLD=2000  # milliseconds
VOICE_V2_ERROR_RATE_THRESHOLD=0.05      # 5%
VOICE_V2_MEMORY_USAGE_THRESHOLD=0.8     # 80%
VOICE_V2_CPU_USAGE_THRESHOLD=0.7        # 70%

# Logging and Debug
VOICE_V2_PERFORMANCE_LOG_LEVEL=INFO
VOICE_V2_DEBUG_PERFORMANCE=false
